<% if notice.present? %>
  <div class="alert alert-success text-center">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p><%= notice %></p>
  </div>
<% end %>
<% if alert.present? %>
  <div class="alert alert-danger text-center">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p><%= alert %></p>
  </div> 
<% end %>