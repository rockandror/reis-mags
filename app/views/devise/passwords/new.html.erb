<div class="container page">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2><%= t('.forgot_your_password') %></h2>
      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.email_field :email, hide_label:true, placeholder: "Email" %>
          <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary btn-block" %>
          <br />
          <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
